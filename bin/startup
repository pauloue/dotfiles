#!/bin/sh
swaymsg -- workspace --no-auto-back-and-forth 1
swaymsg exec firefox
swaymsg -t subscribe "['window']"
swaymsg workspace 2
swaymsg exec 'alacritty --working-directory ~/Documents/notes -e vim -S'
swaymsg -t subscribe "['window']"
swaymsg 'fullscreen; fullscreen' # make sure vim windows are properly sized
